.login-form{
    .user-input, .password-input{
        display: block;
        margin: 0 0 20px 0;
        
        .MuiInputBase-root{
            width: 100%;
        }
    }

    .submit-btn{
        position: relative;

        .circle-progress{
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            margin: auto;
            width: 24px!important;
            height: 24px!important;
        }
    }
}